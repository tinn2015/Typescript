{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs", // 采用的模块化方案
    "outDir": "lib", // 输出目录
    "rootDir": "src", // 需要编译的目录
    "strict": true, // 严格检查的总开关
    "alwaysStrict": false, // 编译后的js是否开启严格模式
    "target": "es2017", // 按什么标准编译
    "esModuleInterop": false,
    "noImplicitAny": false, //不允许隐式的any
    "noImplicitThis": false, // 是否允许不明类型的this
    "resolveJsonModule": true,
    "allowJs": false, // 是否对js文件进行编译
    "checkJs": false, // 检查js代码是否符合规范
    "removeComments": false, // 是否移除注释
    "noEmit": false, //是不是生成编译后的文件
    "noEmitOnError": false, //当有错误的时候不生成js文件
    
  },
  "include": [
    "src/**/*"
  ]
}
